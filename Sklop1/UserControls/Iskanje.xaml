<UserControl x:Class="Sklop1.UserControls.Iskanje"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sklop1.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox Style="{StaticResource TextBox}" TextChanged="OnTextChange" x:Name="iskanjeText" Margin="10 10 0 10" Width="500">Search</TextBox>
            <Image Style="{StaticResource Icon}" Source="/search.png" />
        </StackPanel>
    </Grid>
</UserControl>
