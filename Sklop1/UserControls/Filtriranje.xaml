<UserControl x:Class="Sklop1.UserControls.Filtriranje"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sklop1.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <RadioButton Style="{StaticResource RadioButtons}" Click="BencinEvent">Bencin</RadioButton>
            <RadioButton Style="{StaticResource RadioButtons}" Click="DiselEvent">Disel</RadioButton>
            <RadioButton Style="{StaticResource RadioButtons}" Click="HibridEvent">Hibrid</RadioButton>
            <RadioButton Style="{StaticResource RadioButtons}" Click="ElectroEvent">Electro</RadioButton>
            <RadioButton Style="{StaticResource RadioButtons}" x:Name="vsi" Click="VsiEvent">Vsi</RadioButton>
        </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                <CheckBox Style="{StaticResource CheckBox}" x:Name="CheckBoxLimuzina" Click="Limuzina_OnClick">Limuzina</CheckBox>
                <CheckBox Style="{StaticResource CheckBox}" x:Name="CheckBoxKaravan"  Click="Karavan_OnChecked">Karavan</CheckBox>
                <CheckBox Style="{StaticResource CheckBox}" x:Name="CheckBoxSUV"  Click="Suv_OnChecked">SUV</CheckBox>
            </StackPanel>
            <Button Style="{StaticResource ButtonNeutral}" Click="Refresh">Refresh</Button>
        </StackPanel>
    </Grid>
</UserControl>
